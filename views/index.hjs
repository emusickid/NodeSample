<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
   
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">

    <title>{{ appname }}</title>
    <link href="/stylesheets/site.css" rel="stylesheet">
    <style type="text/css">
      html, body {
        height: 100%;
        margin: 0;
      }

      #wrapper {
        min-height: 100%; 
      }
    </style>
  </head>

  <body onload="renderReport('Allegro/views/Executive-Summary/ExecutiveDashboard')">

   <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">

        <div class="navbar-brand nodecoration">
          <a href="/"></a>
          <span class="allegroindex nodecoration"><img src='/images/logo_032.png' />Insight</span>  
          <!-- <div style="font-size: 1.5em; font-style: italic; color:white;">Insight</div> -->
        </div>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-left">
           
            {{#projects}}
                <li class="dropdown">             
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="color:white;">{{name}} </a>
                  <ul id=viewlist class="dropdown-menu" role="menu">
                    {{#views}}
                      <li id={{viewurl}} draggable="true" ondrop="drop(event)" ondragstart="startDrag(event)" ondragover="allowDrop(event)"> <img src=http://devsqltest/t/{{thumburl}} onclick="renderReport('{{viewurl}}')"/> <a href="#" onclick="renderReport('{{viewurl}}')" >{{viewname}}</a></li>
                    {{/views}}
                  </ul>
              </li>
            {{/projects}}
          </ul>
        </div>
      </div>
    </nav>

    <script>

      var sourceId = 'Id';

      function startDrag(e){
        sourceId = e.currentTarget.id;
        e.dataTransfer.setData("text",e.currentTarget.innerHTML);
      }
      function allowDrop(e) {
          e.preventDefault();
      }

      function drop(e) {

        e.preventDefault();

        var sourceHTML = e.dataTransfer.getData('Text');
        var tagetHTML = e.currentTarget.innerHTML;

        var dropLocation = document.getElementById(e.currentTarget.id);
        var sourceLocation = document.getElementById(sourceId);
        
        dropLocation.innerHTML = sourceHTML;
        sourceLocation.innerHTML = tagetHTML;
      }

    </script>

    <script type="text/javascript" src="http://ec2-54-187-16-121.us-west-2.compute.amazonaws.com/javascripts/api/tableau_v8.js"></script>
    
    <div class="col-lg-1 col-centered" id="tableauViz" style="height:auto; width:auto"\></div>

    <script type="text/javascript">
    function renderReport(viewurl){
            
      console.log(viewurl);
      var vizDiv = document.getElementById('tableauViz');

      if(vizDiv.innerHTML.length > 0){
        viz.dispose();
      }
      
      var vizURL = "http://devsqltest/t/" + viewurl + "";
      var options = {
         hideTabs: true,
         width: "1200px",
         height: "1200px",
         hideTabs: true,
         hideToolbar:true
      };
      
      viz = new tableauSoftware.Viz(vizDiv, vizURL, options);
    }
    </script>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/docs.min.js"></script>
    <script src="/javascripts/ie-emulation-modes-warning.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/javascripts/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>